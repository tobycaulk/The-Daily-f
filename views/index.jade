extends layout

block content
	div.container-fluid
		div.row
			h1#main-heading.text-center The Daily f
		div.row
			h3#guess-text.text-center Today's Range: #{lowerRange} - #{upperRange}
		hr.horizontal-divider
	div.container-fluid
		form#formGuess(name="formGuess", action="/submitGuess", method="post")
			div.row
				div.input-group.input-group-lg.col-lg-4.col-lg-offset-4.col-md-4.col-md-offset-4.col-sm-4.col-sm-offset-4.col-xs-4.col-xs-offset-4
					input#inputGuess.form-control.input-textbox(name="inputGuess", type="text", placeholder="Guess")
					span.input-group-btn
						button.btn.btn-default(type="submit") Submit